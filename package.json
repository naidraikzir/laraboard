{
  "private": true,
  "scripts": {
    "build": "vue-cli-service build && npm run mix",
    "dev": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "mix": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "postinstall": "npm run build",
    "stats": "cross-env NODE_ENV=production STATS=yes webpack --progress --hide-modules"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.1.1",
    "chart.js": "^2.7.2",
    "portal-vue": "^1.3.0",
    "vue": "^2.5.16",
    "vue-feather-icons": "^4.5.0",
    "vue-quill-editor": "^3.0.6",
    "vue-router": "^3.0.1",
    "vue2-datepicker": "^1.9.7",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.9",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.9",
    "@vue/cli-service": "^3.0.0-beta.9",
    "cross-env": "^5.1.5",
    "laravel-mix": "^2.1.11",
    "pug": "^2.0.3",
    "vue-template-compiler": "^2.5.16"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
