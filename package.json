{
  "private": true,
  "scripts": {
    "clean": "rm -rf public/css && rm -rf public/js",
    "dev": "webpack-dev-server --hot",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "mix": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "postinstall": "npm run build",
    "stats": "cross-env NODE_ENV=production STATS=yes webpack --progress --hide-modules"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bootstrap": "^4.0.0-beta",
    "chart.js": "^2.6.0",
    "vue": "^2.4.2",
    "vue-feather-icon": "^1.2.0",
    "vue-quill-editor": "^2.3.2",
    "vue-router": "2.7.0",
    "vuex": "2.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "^0.11.2",
    "json-loader": "^0.5.4",
    "laravel-mix": "^1.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^2.0.6",
    "pug": "^2.0.0-rc.4",
    "sass-loader": "6.0.6",
    "style-loader": "0.18.2",
    "url-loader": "^0.5.7",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 5 versions"
        ]
      }
    }
  }
}
