{
  "private": true,
  "scripts": {
    "clean": "rm -rf public/css && rm -rf public/js",
    "dev": "webpack-dev-server --hot",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "mix": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "postinstall": "npm run build && npm run mix",
    "stats": "cross-env NODE_ENV=production STATS=yes webpack --progress --hide-modules"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "bootstrap": "^4.0.0-beta.2",
    "chart.js": "^2.7.1",
    "vue": "^2.5.3",
    "vue-feather-icon": "^1.2.0",
    "vue-quill-editor": "^2.3.3",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "json-loader": "^0.5.4",
    "laravel-mix": "^1.6.1",
    "node-sass": "^4.6.1",
    "postcss-loader": "^2.0.8",
    "pug": "^2.0.0-rc.4",
    "sass-loader": "6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.5.0",
    "vue-template-compiler": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.4"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 5 versions"
        ]
      }
    }
  }
}
