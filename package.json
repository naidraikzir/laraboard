{
  "private": true,
  "scripts": {
    "clean": "rm -rf public/css && rm -rf public/js",
    "dev": "webpack-dev-server --hot",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "mix": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "postinstall": "npm run build && npm run mix",
    "stats": "cross-env NODE_ENV=production STATS=yes webpack --progress --hide-modules"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.0.0",
    "chart.js": "^2.7.2",
    "vue": "^2.5.16",
    "vue-feather-icon": "^1.2.0",
    "vue-quill-editor": "^3.0.5",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "json-loader": "^0.5.4",
    "laravel-mix": "^2.1.11",
    "node-sass": "^4.8.3",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.3",
    "pug": "^2.0.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "vue-loader": "^14.2.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^3.1.1"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
